<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Cuenta Regresiva Pingoland</title>
  <link href="https://fonts.googleapis.com/css2?family=Press+Start+2P&display=swap" rel="stylesheet">
  <style>
    body {
      margin: 0;
      height: 100vh;
      background-color: #000;  /* Fondo negro */
      display: flex;
      justify-content: center;
      align-items: center;
      font-family: 'Press Start 2P', cursive;
      color: #ff45ff;
      text-shadow: 4px 4px #000;
    }
    #countdown {
      font-size: 18px;
      background: rgba(0, 0, 0, 0.6);
      padding: 40px;
      border: 4px solid #ff45ff;
      border-radius: 20px;
      text-align: center;
    }
  </style>
</head>
<body>

  <div id="countdown">Cargando...</div>

  <script>
    // Añade un ancla sin recargar para mostrar "#cuenta-regresiva-pingoland"
    history.replaceState(null, '', '#cuenta-regresiva-pingoland');

    // Fecha objetivo (5 de julio de 2025 a medianoche)
    const fechaObjetivo = new Date("2025-07-05T00:00:00").getTime();

    function actualizarCuenta() {
      const diff = fechaObjetivo - Date.now();
      if (diff <= 0) {
        clearInterval(timer);
        document.getElementById("countdown").innerText = "¡PINGOLAND COMENZÓ!";
        return;
      }
      const dias = Math.floor(diff / (1000 * 60 * 60 * 24));
      const horas = Math.floor((diff % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
      const minutos = Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60));
      const segundos = Math.floor((diff % (1000 * 60)) / 1000);

      document.getElementById("countdown").innerText =
        `${dias} DÍAS ${horas}H ${minutos}M ${segundos}S`;
    }

    const timer = setInterval(actualizarCuenta, 1000);
    actualizarCuenta();
  </script>

</body>
</html>
